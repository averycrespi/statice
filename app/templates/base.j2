{% from "bootstrap/utils.html" import render_messages %}
{% import "macros.j2" as macros %}

<!doctype html>
<html lang="en">
    <head>
        {% block head %}
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

            {% block styles %}
                {{ bootstrap.load_css() }}
                {{ macros.load_theme() }}
            {% endblock %}

            {% block title %}
                <title>{% if title %}{{ title }}{% else %}Statice{% endif %}</title>
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {{ render_messages() }}
            {% block app_content %}{% endblock %}
        </div>

        {% block scripts %}
            {{ bootstrap.load_js() }}
            {{ moment.include_moment() }}
            {{ macros.include_chart() }}
        {% endblock %}

        {{ macros.render_nav() }}
    </body>
</html>