{% from "bootstrap/utils.html" import render_messages %}
{% import "macros.j2" as macros %}

<!doctype html>
<html lang="en">
    <head>
        {% block head %}
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

            {% block styles %}
                {{ bootstrap.load_css() }}
                {{ macros.load_theme() }}
            {% endblock %}

            {% block title %}
                <title>Title</title>
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {{ render_messages() }}
            {% block app_content %}{% endblock %}
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <a href="{{ url_for("dashboard.dashboard") }}">Dashboard</a>
                        </div>
                        <div class="col-6">
                            <a href="{{ url_for("admin.manage_checks") }}">Admin</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        {% block scripts %}
            {{ bootstrap.load_js() }}
            {{ moment.include_moment() }}
            {{ macros.include_chart() }}
        {% endblock %}
    </body>
</html>