{% from "bootstrap/utils.html" import render_messages %}
{% import "macros.j2" as macros %}

<!doctype html>
<html lang="en">
    <head>
        {% block head %}
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

            {% block styles %}
                {{ bootstrap.load_css() }}
                {{ macros.load_theme() }}
            {% endblock %}

            {% block title %}
                {% if title %}
                    <title>{{ title }}</title>
                {% else %}
                    <title>Statice</title>
                {% endif %}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    {{ render_messages() }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {% block app_content %}{% endblock %}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a href="{{ url_for("dashboard.dashboard") }}">Dashboard</a>
                    <a href="{{ url_for("admin.manage_checks") }}">Admin</a>
                </div>
            </div>

        {% block scripts %}
            {{ bootstrap.load_js() }}
            {{ moment.include_moment() }}
            {{ macros.include_chart() }}
        {% endblock %}
    </body>
</html>